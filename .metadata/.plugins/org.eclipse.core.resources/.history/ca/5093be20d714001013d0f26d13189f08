import javax.swing.*;
import java.awt.*;

public class EmergencyLoginUI extends JFrame {

    public EmergencyLoginUI() {
        setTitle("119긴급센터 로그인");
        setSize(500, 400);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // 배경색 설정
        JPanel panel = new JPanel() {
            @Override
            protected void paintComponent(Graphics g) {
                super.paintComponent(g);
                setBackground(new Color(240, 194, 161)); // 연한 살구색
            }
        };
        panel.setLayout(new BoxLayout(panel, BoxLayout.Y_AXIS));
        panel.setBorder(BorderFactory.createEmptyBorder(60, 100, 60, 100)); // 여백

        // 제목
        JLabel titleLabel = new JLabel("119긴급센터");
        titleLabel.setFont(new Font("SansSerif", Font.BOLD, 36));
        titleLabel.setAlignmentX(Component.CENTER_ALIGNMENT);
        titleLabel.setForeground(Color.DARK_GRAY);

        // 이메일 입력
        JTextField emailField = new JTextField("you@example.com");
        emailField.setMaximumSize(new Dimension(300, 40));
        emailField.setFont(new Font("SansSerif", Font.PLAIN, 16));

        // 비밀번호 입력
        JPasswordField passwordField = new JPasswordField("password");
        passwordField.setMaximumSize(new Dimension(300, 40));
        passwordField.setFont(new Font("SansSerif", Font.PLAIN, 16));

        // 로그인 버튼
        JButton loginButton = new JButton("Login");
        loginButton.setAlignmentX(Component.CENTER_ALIGNMENT);
        loginButton.setPreferredSize(new Dimension(80, 40));
        loginButton.setMaximumSize(new Dimension(80, 40));
        loginButton.setBackground(Color.DARK_GRAY);
        loginButton.setForeground(Color.WHITE);
        loginButton.setFocusPainted(false);

        // 패널에 컴포넌트 추가
        panel.add(titleLabel);
        panel.add(Box.createRigidArea(new Dimension(0, 30)));
        panel.add(emailField);
        panel.add(Box.createRigidArea(new Dimension(0, 15)));
        panel.add(passwordField);
        panel.add(Box.createRigidArea(new Dimension(0, 20)));
        panel.add(loginButton);

        add(panel);
        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(EmergencyLoginUI::new);
    }
}
