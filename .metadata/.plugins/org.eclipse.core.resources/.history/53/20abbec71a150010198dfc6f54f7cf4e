import javax.swing.*;
import java.awt.*;

public class EmergencyLoginUI extends JFrame {

    public EmergencyLoginUI() {
        setTitle("119긴급센터 로그인");
        setSize(900, 600);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        // 메인 패널: 중앙 정렬을 위한 GridBagLayout
        JPanel panel = new JPanel(new GridBagLayout()) {
            @Override
            protected void paintComponent(Graphics g) {
                super.paintComponent(g);
                setBackground(new Color(240, 194, 161)); // 연한 살구색
            }
        };

        // 내부 콘텐츠 묶을 박스
        Box contentBox = Box.createVerticalBox();

        // 제목
        JLabel titleLabel = new JLabel("119긴급센터");
        titleLabel.setFont(new Font("SansSerif", Font.BOLD, 48));
        titleLabel.setAlignmentX(Component.CENTER_ALIGNMENT);
        titleLabel.setForeground(Color.DARK_GRAY);

        // 이메일 입력
        JTextField emailField = new JTextField("아이디를 입력 / jason0153");
        emailField.setMaximumSize(new Dimension(400, 50));
        emailField.setFont(new Font("SansSerif", Font.PLAIN, 18));

        // 비밀번호 입력
        JPasswordField passwordField = new JPasswordField("123422222");
        passwordField.setMaximumSize(new Dimension(400, 50));
        passwordField.setFont(new Font("SansSerif", Font.PLAIN, 18));

        // 로그인 버튼
        JButton loginButton = new JButton("Login");
        loginButton.setAlignmentX(Component.CENTER_ALIGNMENT);
        loginButton.setPreferredSize(new Dimension(120, 50));
        loginButton.setMaximumSize(new Dimension(120, 50));
        loginButton.setBackground(Color.DARK_GRAY);
        loginButton.setForeground(Color.WHITE);
        loginButton.setFocusPainted(false);
        loginButton.setFont(new Font("SansSerif", Font.BOLD, 16));
        loginButton.addActionListener(e -> {
            String inputEmail = emailField.getText().trim();
            String inputPassword = new String(passwordField.getPassword());

            // 계정 확인
            if (inputEmail.equals("jason0153") && inputPassword.equals("1234")) {
                dispose(); // 현재 로그인 창 닫기
                new EmergencyMainUI(); // 메인 화면 열기
            } else {
                JOptionPane.showMessageDialog(
                    this,
                    "아이디 또는 비밀번호가 올바르지 않습니다.",
                    "로그인 실패",
                    JOptionPane.ERROR_MESSAGE
                );
            }
        });

        // 박스에 추가
        contentBox.add(titleLabel);
        contentBox.add(Box.createVerticalStrut(40));
        contentBox.add(emailField);
        contentBox.add(Box.createVerticalStrut(20));
        contentBox.add(passwordField);
        contentBox.add(Box.createVerticalStrut(30));
        contentBox.add(loginButton);

        // 중앙 배치를 위한 제약조건 설정
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.gridx = 0;
        gbc.gridy = 0;
        panel.add(contentBox, gbc);

        add(panel);
        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(EmergencyLoginUI::new);
    }
}
