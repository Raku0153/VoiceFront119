import javax.swing.*;
import java.awt.*;
import java.net.URL;

public class ImageButtonTest {
    public static void main(String[] args) {
        JFrame frame = new JFrame("이미지 버튼 테스트");
        frame.setSize(300, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLayout(new BorderLayout());

        // 이미지 경로 가져오기 (resources 폴더에 넣었다고 가정)
        URL imageUrl = ImageButtonTest.class.getResource("images/call.jpg");
        if (imageUrl == null) {
            System.out.println("이미지를 찾을 수 없습니다.");
            return;
        }
        
        System.out.println(getClass().getResource("/images/call.jpg"));


        ImageIcon icon = new ImageIcon(imageUrl);
        Image scaled = icon.getImage().getScaledInstance(80, 80, Image.SCALE_SMOOTH);
        JButton callButton = new JButton(new ImageIcon(scaled));
        callButton.setBorderPainted(false);
        callButton.setContentAreaFilled(false);
        callButton.setFocusPainted(false);
        callButton.setCursor(Cursor.getPredefinedCursor(Cursor.HAND_CURSOR));

        callButton.addActionListener(e -> {
            System.out.println("긴급 출동!");
        });

        frame.add(callButton, BorderLayout.SOUTH);
        frame.setVisible(true);
    }
}
